# File path: /etc/systemd/system/router.service
# sudo systemctl daemon-reload
# sudo systemctl start router
# sudo systemctl enable router
# sudo systemctl status router
[Unit]
Description=Router Service
After=network.target

[Service]
User=ubuntu  # 注意修改用户名
WorkingDirectory=/path/to/router  # 注意修改路径
ExecStart=/path/to/router/router --port 3000 --log-dir /path/to/router/logs  # 注意修改路径和端口号
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
